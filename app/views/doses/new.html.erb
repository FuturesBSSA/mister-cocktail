<h2>Add a new recipe description</h2>

<%= simple_form_for(@dose, url: cocktail_doses_path(@cocktail)) do |f| %>
<%= f.error_notification %>
<%= f.input :description %>
<%= f.input :ingredient_id, collection: @ingredients %>
<%= f.button :submit, class: "btn btn-success" %>
<% end %>

<%= link_to 'Back', cocktails_path(@cocktail), class: "btn btn-primary"  %>
